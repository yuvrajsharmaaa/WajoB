# ==================================
# APPLICATION
# ==================================
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# ==================================
# DATABASE (PostgreSQL)
# ==================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=wagob_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=wagob_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# ==================================
# REDIS
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# ==================================
# JWT AUTHENTICATION
# ==================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRATION=30d

# ==================================
# TELEGRAM BOT
# ==================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=random_webhook_secret_key

# ==================================
# TON BLOCKCHAIN
# ==================================
TON_NETWORK=testnet
TON_API_KEY=
TON_TONCENTER_API_URL=https://testnet.toncenter.com/api/v2
TON_INDEXER_INTERVAL=10000

# Contract Addresses (Update after deployment)
CONTRACT_JOB_REGISTRY=EQD...
CONTRACT_ESCROW=EQD...
CONTRACT_REPUTATION=EQD...

# ==================================
# SECURITY
# ==================================
CORS_ORIGIN=http://localhost:3000,https://your-telegram-mini-app.vercel.app
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==================================
# MONITORING & LOGGING
# ==================================
LOG_LEVEL=debug
SENTRY_DSN=

# ==================================
# BULL QUEUE
# ==================================
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123

# ==================================
# EXTERNAL SERVICES
# ==================================
# AWS (for production file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# SendGrid (for email notifications - optional)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
